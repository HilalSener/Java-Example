<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>srv_pw</servlet-name>
        <servlet-class>render.servlets.srv_pw</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srv_reg</servlet-name>
        <servlet-class>render.servlets.srv_reg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srv_login</servlet-name>
        <servlet-class>render.servlets.srv_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srv_share</servlet-name>
        <servlet-class>render.servlets.srv_share</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srv_ekle</servlet-name>
        <servlet-class>render.servlets.srv_ekle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>srv_pw</servlet-name>
        <url-pattern>/Servlet/srv_pw</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srv_reg</servlet-name>
        <url-pattern>/Servlet/srv_reg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srv_login</servlet-name>
        <url-pattern>/Servlet/srv_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srv_share</servlet-name>
        <url-pattern>/Servlet/srv_share</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srv_ekle</servlet-name>
        <url-pattern>/Servlet/srv_ekle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
    
    <filter>
    <filter-name>UrlRewriteFilter</filter-name>
    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
</filter-mapping>
</web-app>
